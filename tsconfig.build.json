// This file is used just for build configuration, not typechecking
// https://stackoverflow.com/questions/58542301/issues-building-a-typescript-monorepo-project
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "compiled",
    "rootDir": ".",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["scripts"]
}
