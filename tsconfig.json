{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "compiled",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["scripts", "packages"]
}
