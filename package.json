{
  "name": "npm-monorepo",
  "private": true,
  "repository": "https://github.com/ericbiewener/npm-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "prettier": "prettier --write \"!(packages)/*.{ts,tsx,js,json,yml}\"",
    "lint": "eslint --fix --ext .ts,.tsx,.js scripts",
    "c": "node ./compiled/scripts/cdPackage.js",
    "compile": "rm -rf compiled && tsc --watch --project tsconfig.build.json",
    "tsc": "tsc",
    "tscw": "yarn tsc --watch",
    "a": "node compiled/scripts/workspaceAdd.js",
    "ad": "yarn a --dev",
    "r": "node compiled/scripts/workspaceRemove.js",
    "reinstall": "lerna clean && rm -rf node_modules && yarn install",
    "p": "lerna publish --no-push && git push --tags"
  },
  "lint-staged": {
    "**/*.{json,yml,md,gql}": [
      "prettier --write"
    ],
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@ericbiewener/eslint-config-typescript": "*",
    "@ericbiewener/inquirer-autocomplete-prompt": "1.0.3",
    "@ericbiewener/log": "*",
    "@ericbiewener/types": "*",
    "@ericbiewener/utils": "*",
    "@types/classnames": "2.2.10",
    "@types/html-webpack-plugin": "3.2.3",
    "@types/inquirer": "7.3.0",
    "@types/jest": "26.0.8",
    "@types/node": "14.0.27",
    "@types/yargs": "15.0.5",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-eslint": "11.0.0-beta.2",
    "babel-loader": "8.1.0",
    "cli": "1.0.1",
    "dotenv-webpack": "2.0.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "fuzzy": "0.1.3",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "inquirer": "7.3.3",
    "jest": "26.2.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier-eslint-cli": "5.0.0",
    "style-loader": "1.2.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "yargs": "15.4.1"
  }
}
