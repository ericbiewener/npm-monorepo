{
  "name": "npm-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "l": "lerna",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,json,yml}\"",
    "eslint": "eslint --fix --ext .ts,.tsx,.js ./scripts",
    "c": "node ./compiled/scripts/cdPackage.js",
    "compile": "rm -rf compiled && tsc",
    "a": "yarn l add --exact",
    "ad": "yarn a --dev",
    "rm:nodeModules": "rm -rf packages/**/node_modules"
  },
  "lint-staged": {
    "**/*.{json,yml}": [
      "prettier --write"
    ],
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@ericbiewener/eslint-config-typescript": "latest",
    "@ericbiewener/log": "latest",
    "@ericbiewener/types": "latest",
    "@ericbiewener/utils": "latest",
    "@types/classnames": "2.2.10",
    "@types/html-webpack-plugin": "3.2.3",
    "@types/inquirer": "7.3.0",
    "@types/jest": "26.0.8",
    "@types/node": "14.0.27",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-eslint": "11.0.0-beta.2",
    "babel-loader": "8.1.0",
    "cli": "1.0.1",
    "dotenv-webpack": "2.0.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "fuzzy": "0.1.3",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "inquirer": "7.3.3",
    "inquirer-autocomplete-prompt": "1.0.2",
    "jest": "26.2.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "prettier-eslint-cli": "5.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.21",
    "style-loader": "1.2.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "yargs": "15.4.1"
  }
}
